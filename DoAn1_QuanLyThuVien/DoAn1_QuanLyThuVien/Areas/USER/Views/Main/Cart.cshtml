@model DoAn1_QuanLyThuVien.Models.Cart

@{
    ViewBag.Title = "Cart";
    Layout = "~/Areas/User/Views/Shared/_Layout_User_1.cshtml";
}

<body>
    <!-- Cart Start -->
    <div class="cart-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <div class="cart-page-inner">
                        <div class="table-responsive">
                            @using (Html.BeginForm())
                            {
                                <table class="table table-bordered">

                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Tên sách</th>
                                            <th>Số lượng</th>
                                            <th>Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody class="align-middle">
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="img">
                                                        <a href="#"><img src="../img/1.jpg" alt="Image"></a>
                                                        <p>@Html.DisplayFor(mode => item.sach.DauSach.TenSach)</p>
                                                    </div>
                                                </td>
                                                <td>1</td>

                                                <td><button><i class="fa fa-trash"></i></button></td>
                                            </tr>
                                        }                                        
                                    </tbody>
                                </table>
                            }

                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="cart-page-inner">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="cart-summary">
                                    <div class="cart-content">
                                        <h1>Yêu cầu mượn</h1>
                                        <p>MSSV<span>18dh110219</span></p>
                                        <p>Họ tên<span>Trần Quốc Đại</span></p>
                                        <p>Ngày mượn<span>5/5/2021</span></p>
                                        <h2>Ngày trả<span>20/5/2021</span></h2>
                                    </div>
                                    <div class="cart-btn">
                                        <button>MƯỢN</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart End -->


</body>
</html>


