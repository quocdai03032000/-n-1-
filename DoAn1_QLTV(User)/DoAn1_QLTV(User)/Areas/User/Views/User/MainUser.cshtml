@model IEnumerable<DoAn1_QLTV_User_.Models.DauSach>

@{
    ViewBag.Title = "MainUser";
    Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";
}

<div class="col-md-5">
    <div class="search position_search">
        <input type="text" placeholder="Tìm kiếm">
        <button><i class="fa fa-search"></i></button>
    </div>
</div>
<div class="container" style="margin-top:10px;">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card-pro">
                    <img src="@Url.Content(item.HinhAnh)" style="height:150px;width:150px" />
                    <p>@Html.DisplayFor(model => item.TenSach)</p>
                    <p>@Html.DisplayFor(model => item.TacGia)</p>
                    <p>@Html.DisplayFor(model => item.TheLoai)</p>
                    <p>@Html.ActionLink("Thuê", "Details_Book", new { id = item.MaDauSach })</p>
                </div>
            </div>
        }
    </div>
</div>
